<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/framePerformer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabTaskList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/coral"
                app:tabIndicatorHeight="4dp"
                app:tabTextColor="@color/gray"
                app:tabSelectedTextColor="@color/black"
                app:tabBackground="@color/white"/>

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpTaskList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTaskList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    <FrameLayout
            android:id="@+id/emptyFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/ivBannerTaskCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/banner_task_create"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/hLine1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_16dp"
                    android:layout_marginLeft="@dimen/margin_left_16dp"
                    android:layout_marginStart="@dimen/margin_left_16dp"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:text="Создавайте
любые задания"
                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginBottom="@dimen/margin_bottom_16dp"
                    android:layout_marginLeft="@dimen/margin_left_16dp"
                    android:layout_marginStart="@dimen/margin_left_16dp"
                    android:text="и находите местных жителей
для его выполнения!"
                    app:layout_constraintBottom_toTopOf="@+id/btCreateTask"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/textView"/>

            <Button
                    android:id="@+id/btCreateTask"
                    style="@style/buttonSolid"
                    android:layout_width="wrap_content"
                    android:text="@string/task_create"
                    android:paddingLeft="@dimen/padding_right_16dp"
                    android:paddingStart="@dimen/padding_right_16dp"
                    android:paddingEnd="@dimen/padding_right_16dp"
                    android:paddingRight="@dimen/padding_right_16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBannerTaskCreate"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/hLine1"
                    style="@style/Guideline"
                    app:layout_constraintGuide_percent="0.40"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTaskCategory"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/hLine1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</FrameLayout>
