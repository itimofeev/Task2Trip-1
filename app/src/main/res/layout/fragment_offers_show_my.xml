<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabOfferList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/coral"
            app:tabIndicatorHeight="4dp"
            app:tabTextColor="@color/gray"
            app:tabSelectedTextColor="@color/black"
            app:tabBackground="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpOfferList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_bottom_8dp"
            app:layout_constraintTop_toBottomOf="@+id/tabOfferList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btCreateTask"/>

    <Button
            android:id="@+id/btCreateTask"
            android:text="@string/task_create"
            style="@style/buttonSolid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>