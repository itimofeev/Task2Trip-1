<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl0"
            app:layout_constraintGuide_percent="0.0"
            style="@style/Guideline"/>

    <TextView
            android:id="@+id/tvWork"
            android:text="Сфера деятельности"
            style="@style/TextTitleAboutProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gl0"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etWork"
            style="@style/EditTextProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gl1"
            app:layout_constraintTop_toBottomOf="@+id/tvWork"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl1"
            app:layout_constraintGuide_percent="0.25"
            style="@style/Guideline"/>

    <TextView
            android:id="@+id/tvInterest"
            android:text="Интересы"
            style="@style/TextTitleAboutProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gl1"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etInterest"
            style="@style/EditTextProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gl2"
            app:layout_constraintTop_toBottomOf="@+id/tvInterest"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl2"
            app:layout_constraintGuide_percent="0.50"
            style="@style/Guideline"/>

    <TextView
            android:id="@+id/tvAboutMe"
            android:text="Расскажите о себе"
            style="@style/TextTitleAboutProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gl2"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAboutMe"
            style="@style/EditTextProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gl3"
            app:layout_constraintTop_toBottomOf="@+id/tvAboutMe"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl3"
            app:layout_constraintGuide_percent="0.75"
            style="@style/Guideline"/>

    <TextView
            android:id="@+id/tvWhy"
            android:text="Почему вы на task2trip"
            style="@style/TextTitleAboutProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gl3"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etWhy"
            style="@style/EditTextProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gl4"
            app:layout_constraintTop_toBottomOf="@+id/tvWhy"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl4"
            app:layout_constraintGuide_percent="1.00"
            style="@style/Guideline"/>
</androidx.constraintlayout.widget.ConstraintLayout>