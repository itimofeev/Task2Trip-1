<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:id="@+id/groupStepLevelUp"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <View
                android:id="@+id/view_step_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/purple"/>

        <View
                android:id="@+id/view_step_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/gray_light"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollMain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/groupStepLevelUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btNext">

        <LinearLayout
                android:id="@+id/groupContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvWork"
                    android:text="@string/profile_my_activity"
                    style="@style/TextTitleAboutProfile"/>

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etWorkAndActivity"
                    style="@style/EditTextProfile"/>

            <TextView
                    android:id="@+id/tvInterest"
                    android:text="@string/profile_interest"
                    style="@style/TextTitleAboutProfile"/>

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etInterest"
                    style="@style/EditTextProfile"/>

            <TextView
                    android:id="@+id/tvAboutMe"
                    android:text="@string/profile_tell_myself"
                    style="@style/TextTitleAboutProfile"/>

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAboutMe"
                    style="@style/EditTextProfile"/>

            <TextView
                    android:id="@+id/tvWhy"
                    android:text="@string/profile_why_you_there"
                    style="@style/TextTitleAboutProfile"/>

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etWhyUse"
                    style="@style/EditTextProfile"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
            android:id="@+id/btNext"
            android:text="@string/next_step"
            style="@style/buttonSolid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <com.task2trip.widgetlibrary.LoadingAndMessage
            android:id="@+id/viewLoadAndMessage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>