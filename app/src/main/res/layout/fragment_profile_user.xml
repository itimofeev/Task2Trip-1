<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="@dimen/image_size_small"
            android:layout_height="@dimen/image_size_small"
            tools:src="@drawable/vector_ic_default_travel"
            android:layout_marginTop="@dimen/margin_top_32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"/>

    <TextView
            android:id="@+id/tvTaskCreatedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_text_16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="0"
            android:text=""
            app:layout_constraintEnd_toStartOf="@+id/ivProfilePhoto"
            app:layout_constraintTop_toTopOf="@+id/ivProfilePhoto"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tvTaskCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:text="@string/profile_task_created"
            app:layout_constraintTop_toBottomOf="@+id/tvTaskCreatedCount"
            app:layout_constraintStart_toStartOf="@+id/tvTaskCreatedCount"
            app:layout_constraintEnd_toEndOf="@+id/tvTaskCreatedCount"/>

    <TextView
            android:id="@+id/tvTaskExecutedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_text_16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="109"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/ivProfilePhoto"
            app:layout_constraintTop_toTopOf="@+id/ivProfilePhoto"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tvTaskExecuted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:text="@string/profile_task_executed"
            app:layout_constraintTop_toBottomOf="@+id/tvTaskExecutedCount"
            app:layout_constraintEnd_toEndOf="@+id/tvTaskExecutedCount"
            app:layout_constraintStart_toStartOf="@+id/tvTaskExecutedCount"/>

    <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_32dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_text_16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="Александра Терешина"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/ivProfilePhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tvUserNameLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:text=""
            tools:text="Москва"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.25"
            style="@style/RatingBarStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUserNameLocation"/>

    <LinearLayout
            android:id="@+id/groupLikes"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_size_very_small"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageView
                android:id="@+id/ivLike"
                android:layout_width="@dimen/image_size_very_small"
                android:layout_height="@dimen/image_size_very_small"
                android:src="@drawable/vector_ic_like_hand_up"/>

        <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_8dp"
                android:layout_marginStart="@dimen/margin_left_8dp"
                android:layout_marginRight="@dimen/margin_right_16dp"
                android:layout_marginEnd="@dimen/margin_right_16dp"
                android:gravity="center"
                android:text=""
                tools:text="157"/>

        <ImageView
                android:id="@+id/ivDisLike"
                android:layout_width="@dimen/image_size_very_small"
                android:layout_height="@dimen/image_size_very_small"
                android:src="@drawable/vector_ic_dislike_hand_down"/>

        <TextView
                android:id="@+id/tvDisLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_8dp"
                android:layout_marginStart="@dimen/margin_left_8dp"
                android:gravity="center"
                android:text=""
                tools:text="0"/>
    </LinearLayout>

    <View
            android:id="@+id/view_delimiter_01"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_margin="@dimen/margin_all_16dp"
            android:background="@color/gray_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupLikes"/>

    <TextView
            android:id="@+id/tvAboutMeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_all_16dp"
            android:textSize="@dimen/text_size_text_16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="О Себе"
            app:layout_constraintTop_toBottomOf="@+id/view_delimiter_01"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tvAboutMe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_all_16dp"
            android:textSize="12sp"
            android:text=""
            tools:text="Я коммуникабельный, гибкий, общительный человек."
            app:layout_constraintTop_toBottomOf="@+id/tvAboutMeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:id="@+id/view_delimiter_02"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_margin="@dimen/margin_all_16dp"
            android:background="@color/gray_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAboutMe"/>

    <TextView
            android:id="@+id/tvSocialNetworksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_all_16dp"
            android:textSize="@dimen/text_size_text_16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Подтверждены"
            app:layout_constraintTop_toBottomOf="@+id/view_delimiter_02"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>