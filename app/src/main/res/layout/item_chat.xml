<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_small"
        android:layout_margin="@dimen/margin_all_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/vector_ic_user_profile" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/marginLeftRight16dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tvMessageDateTime"
        app:layout_constraintStart_toEndOf="@+id/ivAvatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Юлия Петрова" />

    <TextView
        android:id="@+id/tvMessageDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_right_8dp"
        android:layout_marginRight="@dimen/margin_right_8dp"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="18.03.2019" />

    <TextView
            android:id="@+id/tvMessageLast"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/marginLeftRight16dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/view_delimiter"
            app:layout_constraintEnd_toStartOf="@+id/tvMessageCount"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
            tools:text="Здравствуйте, это последнее сообщение от Васи Пупкина по поводу"/>

    <TextView
        android:id="@+id/tvMessageCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_right_8dp"
        android:layout_marginRight="@dimen/margin_right_8dp"
        android:background="@drawable/bg_badge"
        android:paddingTop="@dimen/padding_top_8dp"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="@dimen/margin_bottom_8dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/view_delimiter"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="123" />

    <View
        android:id="@+id/view_delimiter"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivAvatar" />
</androidx.constraintlayout.widget.ConstraintLayout>
