<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvDisableNtf"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:id="@+id/tvDisableNtfTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Не беспокоить"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_top_16dp"
            app:strokeColor="@color/coral"
            app:strokeWidth="1dp"
            app:cardCornerRadius="@dimen/corner_radius_8dp"
            app:cardElevation="@dimen/elevation_4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvDisableNtf"
            app:layout_constraintBottom_toTopOf="@+id/hLine1">
        <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сообщения"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.35"
            android:orientation="horizontal"/>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvSource"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_top_16dp"
            app:layout_constraintTop_toBottomOf="@+id/hLine1"
            app:layout_constraintBottom_toTopOf="@+id/hLine2">
        <TextView
                android:id="@+id/tvSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Источники"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.55"
            android:orientation="horizontal"/>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvCallback"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_top_16dp"
            app:layout_constraintTop_toBottomOf="@+id/hLine2"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:id="@+id/tvCallback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Источники"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>