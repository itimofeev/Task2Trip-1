<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/ivBannerTaskCreate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/banner_task_create"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        android:id="@+id/tvCreateAnyTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/ivBannerTaskCreate"
                        android:layout_alignStart="@id/ivBannerTaskCreate"
                        android:layout_alignTop="@id/ivBannerTaskCreate"
                        android:layout_marginTop="@dimen/margin_top_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:textSize="26sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="@string/board_no_task"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/margin_bottom_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:text="@string/board_no_task_subtitle"
                        android:layout_centerVertical="true"
                        app:layout_constraintStart_toStartOf="parent"/>

                <Button
                        android:id="@+id/btCreateTask"
                        style="@style/buttonSolid"
                        android:layout_width="wrap_content"
                        android:text="@string/task_create"
                        android:paddingLeft="@dimen/padding_right_16dp"
                        android:paddingStart="@dimen/padding_right_16dp"
                        android:paddingEnd="@dimen/padding_right_16dp"
                        android:paddingRight="@dimen/padding_right_16dp"
                        android:layout_alignBottom="@id/ivBannerTaskCreate"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:textSize="26sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="@string/board_category_routes"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                        android:id="@+id/ivCategoryRoutesCreateTask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:src="@drawable/category_routes_task_create"
                        android:scaleType="centerCrop"
                        android:padding="@dimen/padding_all_16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginBottom="@dimen/margin_bottom_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:layout_marginRight="@dimen/margin_left_16dp"
                        android:layout_marginEnd="@dimen/margin_left_16dp"
                        android:text="@string/board_category_routes_details"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:textSize="26sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="@string/board_category_guides"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:src="@drawable/category_guides_task_create"
                        android:scaleType="centerCrop"
                        android:padding="@dimen/padding_all_16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginBottom="@dimen/margin_bottom_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:layout_marginRight="@dimen/margin_left_16dp"
                        android:layout_marginEnd="@dimen/margin_left_16dp"
                        android:text="@string/board_category_guides_details"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:textSize="26sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="@string/board_category_travel_mates"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:src="@drawable/category_travel_mates_task_create"
                        android:scaleType="centerCrop"
                        android:padding="@dimen/padding_all_16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginBottom="@dimen/margin_bottom_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:layout_marginRight="@dimen/margin_left_16dp"
                        android:layout_marginEnd="@dimen/margin_left_16dp"
                        android:text="@string/board_category_travel_mates_details"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:textSize="26sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="@string/board_category_travel_transfer"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:src="@drawable/category_transfer_task_create"
                        android:scaleType="centerCrop"
                        android:padding="@dimen/padding_all_16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginBottom="@dimen/margin_bottom_16dp"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:layout_marginStart="@dimen/margin_left_16dp"
                        android:layout_marginRight="@dimen/margin_left_16dp"
                        android:layout_marginEnd="@dimen/margin_left_16dp"
                        android:text="@string/board_category_travel_transfer_details"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>