<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textLayout" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:text">@color/gray</item>
        <item name="android:colorControlNormal">@color/coral</item>
        <item name="android:colorControlActivated">@color/coral</item>
    </style>

    <style name="textLayoutSearch" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@color/gray</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_right_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_16dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:colorControlActivated">@color/gray</item>
    </style>

    <style name="textLayoutSearchLocation" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@color/gray</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:colorControlActivated">@color/gray</item>
    </style>
</resources>