<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="buttonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="textBaseContentContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBaseParentParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBaseConstraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBaseConstraintContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="marginLeftRight16dp">
        <item name="android:layout_marginStart">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_right_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_16dp</item>
    </style>

    <style name="textBaseParentContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textGrayParent" parent="textBaseParentParent">
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="textGrayConstraint" parent="textBaseConstraint">
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="textGrayConstraintContent" parent="textBaseConstraintContent">
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="textColored" parent="textBaseContentContent">
        <item name="android:textColor">@color/coral</item>
    </style>

    <style name="MarginBase">
        <item name="android:layout_marginTop">@dimen/margin_top_16dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_right_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_16dp</item>
    </style>

    <style name="buttonMargin" parent="buttonBase">
        <item name="android:layout_marginLeft">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_right_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_top_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_16dp</item>
    </style>

    <style name="buttonSolid" parent="buttonMargin">
        <item name="android:background">@drawable/bg_button_solid</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="buttonBorder" parent="buttonMargin">
        <item name="android:background">@drawable/bg_button_border</item>
        <item name="android:textColor">@color/coral</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textLayout" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:text">@color/gray</item>
    </style>

    <style name="textLayoutSearch" parent="textLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@color/gray</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_right_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_16dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
    </style>

    <style name="textNoLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/top_step</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_left_16dp</item>
        <item name="android:layout_marginRight">@dimen/margin_right_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_16dp</item>
    </style>

    <style name="Guideline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AboutProfileBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/margin_all_16dp</item>
    </style>

    <style name="EditTextProfile" parent="AboutProfileBase">
        <item name="android:background">@drawable/bg_edittext_profile</item>
        <item name="android:padding">@dimen/margin_all_8dp</item>
    </style>

    <style name="TextTitleAboutProfile" parent="AboutProfileBase">
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
